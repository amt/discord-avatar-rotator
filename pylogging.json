{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(lineno)s:%(funcName)s - %(message)s"
    }
  },
  "handlers": {
    "file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "simple",
      "filename": "output.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf8"
    },
    "stdout_handler": {
        "class": "logging.StreamHandler",
        "formatter": "simple"
      }
  },
  "root": {
    "level": "INFO",
    "handlers": [
      "file_handler",
      "stdout_handler"
    ]
  }
}